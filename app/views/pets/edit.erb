<h1>Update Pet</h1>
<h2>Edits for <%= @pet.name %></h2>
<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label>Edit the Pet's Name:</label><br>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"><br>

  <label>Select Among Exisiting Owners or Create a New One:</label><br>
  <h2>Existing Owners</h2>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"<%= 'checked' if @pet.owner_id == owner.id %>>
    <label for="<%= owner.id %>"><%= owner.name %></label>
  <% end %><br>

  <h2>Create a New Owner</h2>
  <input type="text" name="owner[name]" id="owner_name"><br>
  <input type="submit" value="Update Pet">
</form>
